    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "C#: API Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/API.csproj"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "https://localhost:5001/",
            "pathMappings": [{
                "url": "https://localhost:5001/",
                "path": "${workspaceFolder}"
            }]
        }



    ]
}